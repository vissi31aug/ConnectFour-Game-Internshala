                  <Insets left="31.0" right="20.0" />
               </VBox.margin>
               <padding>
                  <Insets right="20.0" />
               </padding></Button>
            <Label alignment="CENTER" prefHeight="45.0" prefWidth="371.0" text="Player Name" textFill="#b5f7a8">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font></Label>
            <Label fx:id="playerNameLabel" alignment="CENTER" prefHeight="36.0" prefWidth="375.0" text="Turn" textFill="#ece8e8">
               <font>
                  <Font size="25.0" />
               </font></Label>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </VBox>
   </children>
